{
  "info": {
    "name": "Flight Booking API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Search Airports",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:4000/api/airports?keyword=JFK",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "airports"],
          "query": [
            {
              "key": "keyword",
              "value": "JFK"
            }
          ]
        }
      }
    },
    {
      "name": "Search Flights",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:4000/api/flights?originLocationCode=DFW&destinationLocationCode=JFK&departureDate=2025-06-06&adults=1&travelClass=ECONOMY",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "flights"],
          "query": [
            {
              "key": "originLocationCode",
              "value": "DFW"
            },
            {
              "key": "destinationLocationCode",
              "value": "JFK"
            },
            {
              "key": "departureDate",
              "value": "2025-06-06"
            },
            {
              "key": "adults",
              "value": "1"
            },
            {
              "key": "travelClass",
              "value": "ECONOMY"
            }
          ]
        }
      }
    }
  ]
} 